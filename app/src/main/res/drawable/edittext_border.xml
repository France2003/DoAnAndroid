<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được focus -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="#FF9800" /> <!-- Viền màu cam -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái khi bấm vào -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="#2196F3" /> <!-- Viền màu xanh -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="#BDBDBD" /> <!-- Viền màu xám -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
        </shape>
    </item>
</selector>
